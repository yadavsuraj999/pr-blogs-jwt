<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="icon" href="/assets/img/blog.png">

    <style>
        body {
            background-color: #f8f9fa;
        }

        .blog-img {
            height: 300px;
            object-fit: cover;

        }

        .card-body1 {
            height: 200px;
            overflow: hidden;
            padding: 16px;
        }
    </style>
</head>

<body class="">
    <nav class="navbar navbar-expand-lg bg-white shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
                <span class="material-icons text-primary me-1">dashboard</span>
                Blog App
            </a>
            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/admin" class="btn btn-outline-primary btn-sm">Admin</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-5">
        <div class="row g-4">
            <div class="col-md-3 col-sm-6">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <span class="material-icons text-primary fs-1">edit</span>
                        <h6 class="mt-2">Create Blogs</h6>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <span class="material-icons text-success fs-1">visibility</span>
                        <h6 class="mt-2">Read Blogs</h6>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <span class="material-icons text-warning fs-1">update</span>
                        <h6 class="mt-2">Update Content</h6>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <span class="material-icons text-danger fs-1">delete</span>
                        <h6 class="mt-2">Delete Blogs</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-5">
        <h4 class="fw-bold mb-4">Latest Blogs</h4>

        <div class="row g-4">

            <% if (!blogs || blogs.length===0) { %>
                <p class="text-center text-muted">No blogs available</p>
                <% } else { %>

                    <% blogs.forEach(blog=> { %>
                        <div class="col-lg-4 col-md-6">
                            <div class="card shadow-sm h-100">

                                <img src="/<%= blog.blogImage %>" class="card-img-top blog-img" alt="blog">

                                <div class="card-body1">
                                    <td>
                                        <% blog.blogTags.split(",").forEach(tag=> { %>
                                            <span class="badge bg-primary mb-2">
                                                <%- tag.trim() %>
                                            </span>
                                            <% }) %>
                                    </td>
                                    <h6 class="fw-bold">
                                        <%- blog.blogTitle %>
                                    </h6>
                                    <p class="text-muted text-sm mb-2 clamp">
                                        <%- blog.blogDescription %>
                                    </p>
                                </div>

                                <div class="card-footer bg-white border-0">
                                    <a href="/admin/view-blog/<%= blog._id %>"
                                        class="btn btn-sm btn-outline-primary w-100">
                                        Read More
                                    </a>
                                </div>

                            </div>
                        </div>
                        <% }) %>

                            <% } %>


        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>